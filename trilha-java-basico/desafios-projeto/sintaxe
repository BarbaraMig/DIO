import java.util.Scanner;

public class ContaTerminal {
    public static void main(String[] args) {
        //atributos: nome cliente, numero conta, saldo, agência
        Scanner scan = new Scanner(System.in);

        System.out.print("insira o nome do cliente:");
        String nomeCliente = scan.nextLine();
        System.out.print("insira o número da conta:");
        int numeroConta = scan.nextInt();
        System.out.print("insira a agência:");
        String agencia = scan.nextLine();
        System.out.print("insira o saldo da conta:");
        float saldo = scan.nextFloat();

        System.out.println("Olá "+nomeCliente+",obrigado por criar uma conta em em nosso banco, sua agência é "+agencia+", conta "+numeroConta+" e seu saldo "+saldo+" já está disponível para saque");

    }
}
